<body>
  <main>
    <section class="products">
      <h1 class="title">CARRITO DE COMPRAS</h1>
      <div class="product-card">
        {{#each productos}}
        <div class="product--card">
          <h1 class="product--title">{{this.product.title}}</h1>
          <p class="product--stock">Precio unitario: ${{this.product.price}} | Cantidad: {{this.quantity}}</p>
        </div>
        {{/each}}
      </div>

      <form action="/api/carts/{{cartId}}/purchase" method="POST">
        <button type="submit">Finalizar Compra</button>
      </form>

      <div>
        <a href="/api/sessions/products">Volver a Productos</a>
      </div>
    </section>
  </main>
  <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
  <script src="js/main.js"></script>
  <script>
      function removeFromCart(productId) {
        fetch(`/api/carts/remove-product`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ productId }),
        })
          .then(response => response.json())
          .then(data => {
            if (data.message) {
              alert('Product removed from cart');
              window.location.reload();
            } else {
              alert('Error removing product from cart');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
        }
  </script>
  <style>
    * {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    header {
      background-image: url("../images/pages/frontPage.png");
      background-size: cover;
      background-position: center;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .nav-container {
      background-color: rgb(36, 36, 36);
      text-align: center;
      justify-content: center;
      font-weight: bold;
      width: 100%;
      height: 40px;
    }

    .nav-container nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      margin-top: 10px;
    }

    .nav-container nav ul li {
      margin: 0 25px;
    }

    .nav-container nav ul li a {
      color: white;
      text-decoration: none;
    }

    .nav-container nav ul li a:hover {
      text-decoration: none;
      color: rgba(193, 255, 114, 0.87);
      border-bottom-style: solid;
      border-bottom-color: rgba(12, 192, 223, 0.87);
    }

    .logo-container {
      margin: 20px 0;
    }

    .logo-container .logo {
      max-height: 400px;
    }

    .text {
      background-color: rgb(36, 36, 36);
      color: white;
      text-align: center;
      padding: 5px 0;
      font-weight: bold;
    }

    main {
      padding: 20px;
    }

    .product-list,
    .cart-list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .product-item,
    .cart-item {
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 5px;
      width: 200px;
    }

    .product-item img {
      max-width: 100%;
      height: auto;
    }

    .product-item h3,
    .cart-item h3 {
      margin: 10px 0;
    }

    footer {
      background-color: #333333;
      color: #ffffff;
      text-align: center;
      padding: 10px 0;
      width: 100%;
      bottom: 0;
    }

    .product--card {
      flex: 0 0 calc(33.333% - 20px);
      box-sizing: border-box;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      border: 3px solid rgba(0, 31, 85, 0.2);
      border-radius: 15px;
      background-color: rgb(220, 220, 220);
      margin: 10px;
    }

    .product-card {
      flex: 0 0 calc(33.333% - 20px);
      box-sizing: border-box;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      border: 3px solid rgba(0, 31, 85, 0.2);
      border-radius: 15px;
      background-color: rgb(246, 246, 246);
    }

    .product-card .product--title {
      font-weight: bold;
      font-size: 1.5em;
      text-align: center;
      padding: 5px;
    }

    .product-card .product--stock {
      font-size: 1.8em;
      text-align: center;
      padding: 5px;
    }

    .products .title {
      text-align: center;
      padding-bottom: 20px;
      font-size: 32px;
    }
  </style>

</body>