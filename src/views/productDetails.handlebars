<body>
    <main>
        <section class="products">
            <h1 class="title">PRODUCTO BUSCADO</h1>
            <div>

                <div class="product-card">
                    <h4 class="product--id">Código: {{code}}</h4>
                    <h1 class="product--title">{{title}}</h1>
                    <p class="product--price">Precio: ${{price}}</p>
                    <h2 class="product--stock">Stock disponible: {{stock}}</h2>
                    <h2 class="product--stock">Categoría: {{category}}</h2>
                    <br>
                    <button onclick="addToCart('{{this._id}}')">Add to Cart</button>
                    <br>
                    <a href="/api/carts/add-product" class="btn-link"><button class="btn-secon">AGREGAR AL
                            CARRITO</button></a>
                </div>
            </div>
        </section>
    </main>
    <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
    <script src="js/main.js"></script>
    <script>
        function addToCart(productId) {
            fetch('/api/carts/add-product', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId }),
            })
                .then(response => response.json())
                .then(data => {
                    console.log(data)
                    if (data.message) {
                        alert('Product added to cart');
                    } else {
                        alert('Error adding product to cart');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
  }
</script>

    <style>
        * {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-image: url("../images/pages/frontPage.png");
            background-size: cover;
            background-position: center;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .nav-container {
            background-color: rgb(36, 36, 36);
            text-align: center;
            justify-content: center;
            font-weight: bold;
            width: 100%;
            height: 40px;
        }

        .nav-container nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .nav-container nav ul li {
            margin: 0 25px;
        }

        .nav-container nav ul li a {
            color: white;
            text-decoration: none;
        }

        .nav-container nav ul li a:hover {
            text-decoration: none;
            color: rgba(193, 255, 114, 0.87);
            border-bottom-style: solid;
            border-bottom-color: rgba(12, 192, 223, 0.87);
        }

        .logo-container {
            margin: 20px 0;
        }

        .logo-container .logo {
            max-height: 400px;
        }

        .text {
            background-color: rgb(36, 36, 36);
            color: white;
            text-align: center;
            padding: 5px 0;
            font-weight: bold;
        }

        main {
